<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graidentbackground"
    tools:context=".View.MainActivity">

    <TextView
        android:id="@+id/WelcomeiBookit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:gravity="center"
        android:text="Welcome to iBOOKit"
        android:textAllCaps="false"
        android:textColor="@color/mainButton"
        android:textSize="34sp"
        android:textStyle="italic"
        android:typeface="sans"
        app:fontFamily="@font/audiowide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_logIn"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2D00A8"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="1"
        android:text="Log In"
        android:textColor="@color/backgroundMaiActivity"
        android:textColorLink="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeiBookit" />

    <TextView
        android:id="@+id/noAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Don't have an account? "
        android:textColor="@color/mainButton"
        android:textSize="20sp"
        android:textStyle="italic"
        app:fontFamily="@font/copse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_logIn" />

    <Button
        android:id="@+id/main_signUp"
        android:layout_width="119dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2D00A8"
        android:shadowDx="1"
        android:shadowDy="4"
        android:shadowRadius="1"
        android:text="Sign Up"
        android:textColor="@color/backgroundMaiActivity"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noAccountText" />

</android.support.constraint.ConstraintLayout>